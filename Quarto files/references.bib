@article{buonincontriTransitionChestnutCastanea2015,
  title = {The Transition of Chestnut ({{Castanea}} Sativa {{Miller}}) from Timber to Fruit Tree: {{Cultural}} and Economic Inferences in the {{Italian}} Peninsula},
  shorttitle = {The Transition of Chestnut ({{Castanea}} Sativa {{Miller}}) from Timber to Fruit Tree},
  author = {Buonincontri, Mauro Paolo and Saracino, Antonio and Di Pasquale, Gaetano},
  year = {2015},
