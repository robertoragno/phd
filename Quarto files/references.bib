  shorttitle = {The {{ROCEEH Out}} of {{Africa Database}} ({{ROAD}})},
  author = {Kandel, Andrew W. and Sommer, Christian and Kanaeva, Zara and Bolus, Michael and Bruch, Angela A. and Groth, Claudia and Haidle, Miriam N. and Hertler, Christine and He{\ss}, Julia and Malina, Maria and M{\"a}rker, Michael and Hochschild, Volker and Mosbrugger, Volker and Schrenk, Friedemann and Conard, Nicholas J.},
