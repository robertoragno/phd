  shorttitle = {Choosing and Using Diversity Indices},
  author = {Morris, E. Kathryn and Caruso, Tancredi and Buscot, Fran{\c c}ois and Fischer, Markus and Hancock, Christine and Maier, Tanja S. and Meiners, Torsten and M{\"u}ller, Caroline and Obermaier, Elisabeth and Prati, Daniel and Socher, Stephanie A. and Sonnemann, Ilja and W{\"a}schke, Nicole and Wubet, Tesfaye and Wurst, Susanne and Rillig, Matthias C.},
