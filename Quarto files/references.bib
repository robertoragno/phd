@article{mackinnonCattleBreedVariation2010,
  title = {Cattle 'breed' Variation and Improvement in {{Roman Italy}}: Connecting the Zooarchaeological and Ancient Textual Evidence},
  shorttitle = {Cattle 'breed' Variation and Improvement in {{Roman Italy}}},
  author = {MacKinnon, Michael},
