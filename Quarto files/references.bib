@article{zanchettaOnewayDeterminismSan2021,
  title = {Beyond One-Way Determinism: {{San Frediano}}'s Miracle and Climate Change in {{Central}} and {{Northern Italy}} in Late Antiquity},
  shorttitle = {Beyond One-Way Determinism},
  author = {Zanchetta, Giovanni and Bini, Monica and Bloomfield, Kevin and Izdebski, Adam and Vivoli, Nicola and Regattieri, Eleonora and Isola, Ilaria and Drysdale, Russell N. and Bajo, Petra and Hellstrom, John C. and Wi{\'s}niewski, Robert and Fallick, Anthony E. and Natali, Stefano and Luppichini, Marco},
