}


@article{pollegioniRethinkingHistoryCommon2017,
  title = {Rethinking the History of Common Walnut ({{Juglans}} Regia {{L}}.) in {{Europe}}: {{Its}} Origins and Human Interactions},
  shorttitle = {Rethinking the History of Common Walnut ({{Juglans}} Regia {{L}}.) in {{Europe}}},
  author = {Pollegioni, Paola and Woeste, Keith and Chiocchini, Francesca and Lungo, Stefano Del and Ciolfi, Marco and Olimpieri, Irene and Tortolano, Virginia and Clark, Jo and Hemery, Gabriel E. and Mapelli, Sergio and Malvolti, Maria Emilia},
