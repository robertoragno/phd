@article{ucchesuFirstFindsPrunus2017,
  title = {First Finds of {{Prunus}} Domestica {{L}}. in {{Italy}} from the {{Phoenician}} and {{Punic}} Periods (6th\textendash 2nd Centuries Bc)},
  author = {Ucchesu, Mariano and Sarigu, Marco and Vais, Carla Del and Sanna, Ignazio and {d'Hallewin}, Guy and Grillo, Oscar and Bacchetta, Gianluigi},
