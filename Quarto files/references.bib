@article{tarongiWhichPulseIt2023,
  title = {Which Pulse Is It? {{Identifying}} Archaeological Legumes Seeds by Means of Biometric Measurements and Geometric Morphometrics},
  shorttitle = {Which Pulse Is It?},
  author = {Tarongi, Miguel and Bouby, Laurent and Bonhomme, Vincent and Alonso, Nat{\`a}lia},
  year = {2023},
